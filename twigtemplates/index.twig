<script>
window.addEventListener('load', function() {
    console.log('All assets are loaded')
    console.log('doc on load')
    var owl = $('.owl-carousel');
    
    owl.owlCarousel({
        loop:false,
        margin:0,
        nav:true,
        items:1,
        smartSpeed:450,
        //touchDrag: false,
         navText: ["<img src='images/purple_line.png'>",'<span id="navnumber">1</span>']
    })
    ;
owl.on('changed.owl.carousel', function(event) {
    console.log(event)
    window.document.getElementById('navnumber').innerHTML = event.item.index+1
})

var prevent_skrollr_render=false
var scrollTop
owl.on('drag.owl.carousel', function(event) {
    console.log('drag.owl.carousel',event)
    prevent_skrollr_render=true
    scrollTop = s.getScrollTop()
    return false
})
owl.on('dragged.owl.carousel', function(event) {
    console.log('draged.owl.carousel',event)
    //prevent_skrollr_render=false
    return false
})
owl.on('translated.owl.carousel', function(event) {
    console.log('translated.owl.carousel',event)
    prevent_skrollr_render=false
    s.setScrollTop(scrollTop, true)

    return false
})



    var menu = document.getElementById("menu")
    var s = skrollr.init({
        forceHeight:false
        , keyframe: function(element, name, direction) {
            if( name=='dataTopBottom' && direction=='down') return // ignorisemo bottom ako ide dolje
            if( name=='data20Top' && direction=='up') return 
            if( name=='dataTop' && direction=='up') return 
            //if (element.classList.contains('fourth-section') && 
            //if (window.innerHeight<768)  return
            var clas = (element && element.dataset)?element.dataset.menu:null;
            //console.log('menu class:', clas, element.id, name, direction, element )
            if (!clas) return
            menu.classList.remove('lite'); 
            menu.classList.remove('dark');
            menu.classList.add(clas);
        }
       // , skrollrBody:'projects'
    });
    skrollr.menu.init(s, {
        //skrollr will smoothly animate to the new position using `animateTo`.
        animate: true,
        //The easing function to use.
    //    easing: 'sqrt',

        //Multiply your data-[offset] values so they match those set in skrollr.init
    //	scale: 2,

        //Add hash link (e.g. `#foo`) to URL or not.
      //  updateUrl: false //defaults to `true`.
    });    
    s.on('beforerender', function(o){
      //console.log('beforerender', o)
      if (prevent_skrollr_render) return false
    })

})

</script>



